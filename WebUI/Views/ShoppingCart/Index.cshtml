@model IEnumerable<WebUI.Models.ShoppingCartVM>
<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8" />
    <title></title>
</head>
<body>
    <h1>Items in Cart</h1>
    <table class="table table-striped table-hover">
        <thead>
            <tr>
                <th>Name</th>
                <th>Price</th>
                <th>Quantity</th>
                <th></th>
            </tr>
        </thead>
        <tbody>
            @foreach (var item in Model)
            {
                <tr>
                    <td>@Html.DisplayFor(modelItem => item.Name)</td>
                    <td>$@Html.DisplayFor(modelItem => item.Price)</td>
                    <td>@Html.DisplayFor(modelItem => item.Quantity)</td>
                    <td>@Html.ActionLink("Remove From Cart", "RemoveItem", new { p_id = item.ProductID }, new { @style = "color:white", @class = "btn btn-secondary" })</td>
                </tr>
            }
        </tbody>
    </table>
    <p>
        @Html.ActionLink("Place Order", "PlaceOrder", new { @style = "color:white", @class = "btn btn-secondary" })
    </p>
</body>
</html>