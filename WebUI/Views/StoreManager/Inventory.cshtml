@model IEnumerable<WebUI.Models.InventoryVM>
<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8" />
    <title></title>
</head>
<body>
    <h1>Store Inventory</h1>
    <table class="table table-striped table-hover">
        <thead>
            <tr>
                <th>Name</th>
                <th>Description</th>
                <th>Price</th>
                <th>Quantity</th>
                <th></th>
            </tr>
        </thead>
        <tbody>
            @foreach (var item in Model)
            {
                <tr>
                    <td>@Html.DisplayFor(modelItem => item.Name)</td>
                    <td>@Html.DisplayFor(modelItem => item.Description)</td>
                    <td>$@Html.DisplayFor(modelItem => item.Price)</td>
                    <td>@Html.DisplayFor(modelItem => item.Quantity) left</td>
                    <td>@Html.ActionLink("Edit Quantity", "Edit", new { p_id = item.ProductID }, new { @style = "color:white", @class = "btn btn-secondary" })</td>
                </tr>
            }
        </tbody>

    </table>
</body>
</html>