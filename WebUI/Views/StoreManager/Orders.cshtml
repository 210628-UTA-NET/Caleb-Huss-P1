@model IEnumerable<WebUI.Models.OrderVM>
<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8" />
    <title></title>
</head>
<body>
    <h1>List of Orders</h1>
    <table class="table table-striped table-hover">
        <thead>
            <tr>
                <th>Order Number</th>
                <th>Number of Items</th>
                <th>Date</th>
                <th>Cost</th>
                <th>Details</th>

            </tr>
        </thead>
        <tbody>
            @foreach (var item in Model)
            {
                <tr>
                    <td>@Html.DisplayFor(modelItem => item.OrderNumber)</td>
                    <td>@Html.DisplayFor(modelItem => item.ItemCount)</td>
                    <td>@Html.DisplayFor(modelItem => item.Date)</td>
                    <td>$@Html.DisplayFor(modelItem => item.Cost)</td>
                    <td>@Html.ActionLink("View","OrderDetails", new { p_orderNum = item.OrderNumber}, new { @style = "color:white", @class = "btn btn-secondary" })</td>
                </tr>
            }
        </tbody>
    </table>
</body>
</html>