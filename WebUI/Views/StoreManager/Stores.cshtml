@model IEnumerable<WebUI.Models.StoreFrontVM>
<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8" />
    <title></title>
</head>
<body>
    <table class="table table-striped table-hover">
        <thead>
            <tr>
                <th>Name</th>
                <th>Address</th>
                <th>City</th>
                <th>State</th>
                <th>Store Number</th>
                <th></th>
                <th></th>
            </tr>
        </thead>
        <tbody>
            @foreach (var item in Model)
            {
            <tr>
                <td>@Html.DisplayFor(modelItem => item.Name)</td>
                <td>@Html.DisplayFor(modelItem => item.Address)</td>
                <td>@Html.DisplayFor(modelItem => item.City)</td>
                <td>@Html.DisplayFor(modelItem => item.State)</td>
                <td>@Html.DisplayFor(modelItem => item.StoreNumber)</td>
                <td>@Html.ActionLink("View Inventory", "Inventory", new { p_num = item.StoreNumber }, new { @style = "color:white", @class = "btn btn-secondary" })</td>
                <td>@Html.ActionLink("View Orders", "Orders", new { p_num = item.StoreNumber, p_sort = "date_desc"}, new { @style = "color:white", @class = "btn btn-secondary" })</td>
            </tr>
            }
        </tbody>
    </table>
</body>
</html>